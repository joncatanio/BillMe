<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/view_group_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="50 Del Mar"
            android:gravity="center"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/view_group_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#FFE0E0E0"
            android:text="Members"
            android:textColor="#8D000000"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"/>
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/view_group_member_list"
            tools:context="com.joncatanio.billme.ViewGroupActivity"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/buttonText"
            android:text="+ Add Member"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/view_group_btn"/>
    </LinearLayout>
</ScrollView>