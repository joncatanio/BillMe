<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="100"
    android:clickable="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:weightSum="100"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingLeft="15dp"
            android:text="Electric"
            android:textSize="28sp"
            android:textColor="#DA000000"
            android:id="@+id/list_bill_history_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingLeft="15dp"
            android:text="Sept 24, 2010"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#8D000000"
            android:fontFamily="sans-serif-light"
            android:id="@+id/list_bill_history_due_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:weightSum="100"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:text="Total: $123.23"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="#DA000000"
            android:layout_weight="50"
            android:id="@+id/list_bill_history_total"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="15dp"
            android:text="Paid: $23.32"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="#DA000000"
            android:layout_weight="50"
            android:id="@+id/list_bill_history_paid"/>
    </LinearLayout>
</LinearLayout>