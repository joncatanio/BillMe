<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:id="@+id/pending_user_img"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:text="Bill Name"
                android:textSize="28sp"
                android:textColor="#DA000000"
                android:fontFamily="sans-serif-light"
                android:id="@+id/pending_bill_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="Jon Catanio"
                android:textSize="22sp"
                android:textColor="#DA000000"
                android:fontFamily="sans-serif-light"
                android:id="@+id/pending_username"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="Group name"
                android:textSize="18sp"
                android:textColor="#8D000000"
                android:id="@+id/pending_group_name"/>
        </LinearLayout>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="20"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/buttonText"
            android:text="Accept"
            android:gravity="center"
            android:background="@drawable/custom_button"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/pending_accept_btn"/>
    </LinearLayout>

</LinearLayout>